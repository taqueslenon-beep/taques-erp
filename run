#!/bin/bash
# Script para iniciar o servidor TAQUES ERP e abrir o navegador

# Obt√©m o diret√≥rio onde este script est√° localizado
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Vai para o diret√≥rio do projeto
cd "$SCRIPT_DIR"

echo "üöÄ Iniciando servidor TAQUES ERP..."

# Inicia o servidor em background
python3 -m mini_erp.main &
SERVER_PID=$!

# Aguarda 3 segundos para o servidor iniciar
echo "‚è≥ Aguardando servidor iniciar..."
sleep 3

# Abre o navegador
echo "üåê Abrindo navegador..."
python3 "$SCRIPT_DIR/open_browser.py"

# Aguarda o servidor (Ctrl+C para encerrar)
echo ""
echo "‚úÖ Servidor rodando! Pressione Ctrl+C para encerrar."
wait $SERVER_PID
